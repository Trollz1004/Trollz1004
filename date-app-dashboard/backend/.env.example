# Server Configuration
NODE_ENV=production
PORT=4000
FRONTEND_URL=https://youandinotai.com

# Database Configuration (Railway PostgreSQL)
# These will be automatically provided by Railway when you add a PostgreSQL database
DB_USER=postgres
DB_PASSWORD=your_db_password_here
DB_HOST=your_railway_postgres_host.railway.app
DB_PORT=5432
DB_NAME=railway

# JWT Keys (REQUIRED - Generate using scripts below)
# Generate with: node -e "const c=require('crypto');console.log(c.generateKeyPairSync('rsa',{modulusLength:2048,publicKeyEncoding:{type:'spki',format:'pem'},privateKeyEncoding:{type:'pkcs8',format:'pem'}}).publicKey)"
JWT_PUBLIC_KEY=your_public_key_here
# Generate with: node -e "const c=require('crypto');console.log(c.generateKeyPairSync('rsa',{modulusLength:2048,publicKeyEncoding:{type:'spki',format:'pem'},privateKeyEncoding:{type:'pkcs8',format:'pem'}}).privateKey)"
JWT_PRIVATE_KEY=your_private_key_here
ACCESS_TOKEN_TTL=15m
REFRESH_TOKEN_TTL_DAYS=30

# Security Secrets (REQUIRED - Generate random strings)
# Generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
REFRESH_TOKEN_PEPPER=your_64_char_hex_string_here
VERIFICATION_CODE_PEPPER=your_32_char_hex_string_here
PHONE_SALT=your_32_char_hex_string_here
ENCRYPTION_SECRET=your_64_char_hex_string_here

# Firebase (Optional - for push notifications)
FIREBASE_SERVICE_ACCOUNT_KEY=

# Redis (Optional - Railway Redis addon)
REDIS_URL=

# Square Payment Configuration
SQUARE_ACCESS_TOKEN=your_square_access_token
SQUARE_ENVIRONMENT=sandbox

# Email Configuration (Optional)
EMAIL_SMTP_HOST=
EMAIL_SMTP_PORT=
EMAIL_SMTP_USER=
EMAIL_SMTP_PASSWORD=
EMAIL_FROM_ADDRESS=

# Logging
LOG_LEVEL=info
