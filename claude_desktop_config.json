{
  "mcpServers": {
    "brave-search": {
      "command": "npx",
      "args": ["-y", "@modelcontextprotocol/server-brave-search"],
      "env": {
        "BRAVE_API_KEY": "your-brave-api-key-here"
      },
      "description": "Real-time market intelligence and competitor analysis across all platforms"
    },
    "sequential-thinking": {
      "command": "npx",
      "args": ["-y", "@modelcontextprotocol/server-sequential-thinking"],
      "description": "Systematic analysis of complex compliance scenarios and multi-step workflows"
    },
    "cloudedroid-grant-system": {
      "command": "node",
      "args": ["cloudedroid-production/mcp-grant-server.js"],
      "env": {
        "POSTGRES_URL": "postgresql://cloudedroid:secure_pass_2024@localhost:5432/cloudedroid_prod",
        "OLLAMA_HOST": "http://localhost:11434",
        "NODE_ENV": "production"
      },
      "description": "ClaudeDroid Grant Automation System - $500K-2M annual funding pipeline"
    },
    "cloudedroid-dao": {
      "command": "node",
      "args": ["cloudedroid-production/mcp-dao-server.js"],
      "env": {
        "POSTGRES_URL": "postgresql://cloudedroid:secure_pass_2024@localhost:5432/cloudedroid_prod"
      },
      "description": "DAO Governance - Token-based voting and smart contract execution"
    },
    "compliance-monitor": {
      "command": "node",
      "args": ["cloudedroid-production/mcp-compliance-server.js"],
      "env": {
        "POSTGRES_URL": "postgresql://cloudedroid:secure_pass_2024@localhost:5432/cloudedroid_prod",
        "FEDERAL_REGISTER_API_KEY": "your-api-key-here"
      },
      "description": "Federal compliance monitoring and automated alerts"
    }
  },
  "globalShortcut": "Ctrl+Space",
  "promptCaching": {
    "enabled": true,
    "maxCacheSize": "10GB",
    "ttl": 3600
  },
  "streaming": {
    "enabled": true,
    "bufferSize": 4096
  },
  "voiceIntegration": {
    "windows": {
      "provider": "Windows Speech Recognition",
      "hotkey": "Win+H"
    },
    "macos": {
      "provider": "Whisper",
      "model": "base"
    }
  },
  "agenticMode": {
    "enabled": true,
    "maxIterations": 10,
    "progressiveSearch": true
  }
}
